    <script>
        lucide.createIcons();

        // Countdown Timer Logic
        const targetDate = new Date("March 21, 2026 11:30:00").getTime();
        setInterval(() => {
            const now = new Date().getTime();
            const distance = targetDate - now;
            
            if (distance > 0) {
                document.getElementById("days").innerText = Math.floor(distance / (1000 * 60 * 60 * 24)).toString().padStart(2, '0');
                document.getElementById("hours").innerText = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)).toString().padStart(2, '0');
                document.getElementById("minutes").innerText = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60)).toString().padStart(2, '0');
                document.getElementById("seconds").innerText = Math.floor((distance % (1000 * 60)) / 1000).toString().padStart(2, '0');
            } else {
                document.getElementById("days").innerText = "00";
                document.getElementById("hours").innerText = "00";
                document.getElementById("minutes").innerText = "00";
                document.getElementById("seconds").innerText = "00";
            }
        }, 1000);

        // Interactive Schedule Switcher
        function switchDay(day) {
            const d1 = document.getElementById('day1Content');
            const d2 = document.getElementById('day2Content');
            const b1 = document.getElementById('btn1');
            const b2 = document.getElementById('btn2');
            
            if(day === 1) {
                d1.classList.remove('hidden');
                d2.classList.add('hidden');
                b1.className = "px-10 py-3 rounded-full font-bold text-sm transition-all bg-white text-navy-bg shadow-lg";
                b2.className = "px-10 py-3 rounded-full font-bold text-sm transition-all text-white hover:bg-white/20";
            } else {
                d1.classList.add('hidden');
                d2.classList.remove('hidden');
                b2.className = "px-10 py-3 rounded-full font-bold text-sm transition-all bg-white text-navy-bg shadow-lg";
                b1.className = "px-10 py-3 rounded-full font-bold text-sm transition-all text-white hover:bg-white/20";
            }
        }
    </script>
</body>
